<!--pages/releaseItem/releaseItem.wxml-->
<scroll-view scroll-y class="scrollPage">
  <image src='/images/cjkz.png' mode='widthFix' class='png' style='width:100%;'></image>
  <view class="margin-top-xl">
    <form>
      <view class="cu-form-group margin-top-xl">
        <view class="title">物品名称</view>
        <input placeholder="请输入物品名称"></input>
      </view>
      <view class="cu-form-group">
        <view class="title">拾取地址</view>
        <input placeholder="请输入拾取地址"></input>
        <text class="cuIcon-locationfill text-orange"></text>
      </view>
      <view class="cu-form-group">
        <view class="title">拾取日期选择</view>
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2020-09-01" bindchange="DateChange">
          <view class="picker">
            {{date}}
          </view>
        </picker>
      </view>
      <view class="cu-form-group">
        <view class="title">拾取时间选择</view>
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
          <view class="picker">
            {{time}}
          </view>
        </picker>
      </view>

      <view class="cu-bar bg-white margin-top">
        <view class="action">
          图片上传
        </view>
        <view class="action">
          {{imgList.length}}/4
        </view>
      </view>
      <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
          <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
            <image src='{{imgList[index]}}' mode='aspectFill'></image>
            <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
              <text class="cuIcon-close"></text>
            </view>
          </view>
          <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
            <text class="cuIcon-cameraadd"></text>
          </view>
        </view>
      </view>
      <view class="cu-form-group align-start">
        <view class="title">备注</view>
        <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="输入备注"></textarea>
      </view>
      <view class="cu-bar btn-group">
        <button form-type="submit" class="cu-btn bg-green shadow-blur round lg">发布</button>
      </view>
    </form>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>