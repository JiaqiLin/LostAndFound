<!--pages/home/home.wxml-->
<cu-custom bgColor="bg-white">
</cu-custom>
<scroll-view scroll-y class="scrollPage">
  <form bindsubmit="searchItem">
    <view class="cu-bar search bg-white fixed" style="top:{{CustomBar}}px">
      <view class="search-form round">
        <text class="cuIcon-search"></text>
        <input type="text" placeholder="搜索失物招领信息" confirm-type="search" value="{{searchKey}}" name="searchKey"></input>
      </view>
      <view class="action">
        <button class="cu-btn bg-green shadow-blur round" formType="submit">搜索</button>
      </view>
    </view>
  </form>
  <view class="nav bg-white fixed flex justify-end text-sm" style="top:{{CustomBar+48}}px">
      <picker mode="date" value="{{date}}" bindchange="TimeChange" name="date" class="margin-sm">
        <view class="picker">
          <text class="cuIcon-sort text-gray">拾取日期  {{date}}</text>
        </view>
      </picker>
  </view>

  <view class="margin-tb" style="margin-top: {{CustomBar+10}}px;">
    <view wx:for="{{items}}" wx:key="_id" data-id="{{item._id}}" class="cu-card article" bindtap="checkItemDetail">
      <view class="cu-item shadow">
        <view class="title flex justify-between">
          <view class="text-cut">{{item.itemName}}</view>
          <text class="text-grey text-sm">{{item.releaseTime}}</text>
        </view>
        <view class="content">
          <view class="desc">
            <view class="text-content">
              <view style="word-break: break-all;">
                <text class="text-black">地点：</text>{{item.address}}
              </view>
              <view class="margin-top">
                <text class="text-black">时间：</text>{{item.date}} {{item.time}}
              </view>
            </view>
          </view>
          <image src="{{item.images[0]}}" mode="aspectFill"></image>
        </view>
      </view>
    </view>
  </view>
  <view class='cu-tabbar-height'></view>
</scroll-view>
<tabbar PageCur="home"></tabbar>