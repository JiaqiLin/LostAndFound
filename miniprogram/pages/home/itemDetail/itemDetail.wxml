<!--pages/home/itemDetail/itemDetail.wxml-->
<cu-custom bgColor="bg-gradual-grey" isBack="{{true}}">
  <view slot="content">物品详情</view>
</cu-custom>

<view class="cu-list menu  card-menu margin-top">
  <swiper class="screen-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
    <swiper-item wx:for="{{item.images}}">
      <image src="{{item}}" mode="aspectFill"></image>
    </swiper-item>
  </swiper>
  <view class="cu-form-group">
    <view class="title">物品名称：</view>
    <text>{{item.itemName}}</text>
  </view>
  <view class="cu-form-group">
    <view class="title">拾取地点：</view>
    <text>{{item.address}}</text>
  </view>
  <view class="cu-form-group">
    <view class="title">拾取时间：</view>
    <text>{{item.date}} {{item.time}}</text>
  </view>
  <view class="cu-form-group align-start">
    <view class="title">描述：</view>
    <textarea maxlength="-1" disabled="true" bindinput="textareaBInput">{{item.description}}</textarea>
  </view>
  <view class="cu-form-group">
    <view class="title">发布时间：</view>
    <text>{{item.releaseTime}}</text>
    <view class="cu-capsule round">
      <view class="cu-tag bg-blue ">
        认领次数
      </view>
      <view class="cu-tag line-blue">
        123
      </view>
    </view>
  </view>
</view>
<view class="cu-bar btn-group margin">
  <button class="cu-btn bg-green shadow-blur round lg " bindtap="showSponsorInfo" data-openid="{{item._openid}}">认领</button>
</view>

<view class="cu-modal {{ifShowSponsorInfo?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">发布者信息</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view >
      <view class="cu-form-group">
        <view class="title">昵称：</view>
        <text>{{sponsorInfo.nickName}}</text>
      </view>
      <view class="cu-form-group">
        <view class="title">联系方式：</view>
        <text>{{sponsorInfo.contact}}</text>
      </view>
    </view>
  </view>
</view>